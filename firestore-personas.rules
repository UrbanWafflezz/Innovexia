rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────────────────────────────────────────────────────
    // Helper functions
    // ─────────────────────────────────────────────────────────────────────────────
    function authed() {
      return request.auth != null;
    }

    function owner(uid) {
      return authed() && request.auth.uid == uid;
    }

    // ─────────────────────────────────────────────────────────────────────────────
    // My Personas: User-scoped collection (signed-in only)
    // ─────────────────────────────────────────────────────────────────────────────
    match /users/{uid}/personas/{personaId} {
      allow read, write: if owner(uid);
    }

    // ─────────────────────────────────────────────────────────────────────────────
    // Public Personas: Read-only for everyone
    // Single "Innovexia" persona stored at /public/personas
    // ─────────────────────────────────────────────────────────────────────────────
    match /public/personas {
      allow read: if true;
      allow write: if false; // Restricted to admin/backend only
    }
  }
}
