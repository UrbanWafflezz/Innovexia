<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Innovexia" parent="android:Theme.Material.NoActionBar">
        <!-- Splash Screen Configuration -->
        <item name="android:windowBackground">@drawable/splash_gradient_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Android 12+ Splash Screen API - uses your app icon -->
        <item name="android:windowSplashScreenBackground">@color/splash_background_dark</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>
</resources>
